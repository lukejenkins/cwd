# Serial connection settings
PORT=/dev/ttyUSB0
BAUDRATE=115200
TIMEOUT=1.0

# Logging settings
LOG_DIR=output
LOG_LEVEL=INFO

# Command execution settings
COMMAND_DELAY=0.5
RETRY_COUNT=3

# Output settings
CSV_DIR=output
CSV_FILENAME=cell_data.csv
JSON_DIR=output
JSON_FILENAME=modem_info.json

# Database settings (optional, for future use)
USE_DATABASE=false
DB_TYPE=sqlite
DB_PATH=output/cell_data.sqlite

# Command cadence settings (in seconds)
FAST_COMMAND_INTERVAL=5.0
MEDIUM_COMMAND_INTERVAL=30.0
SLOW_COMMAND_INTERVAL=300.0

# Smart configuration settings
SMART_CONFIG=false
CONFIG_FILE=modem_config.yaml